@model SeedsListModel

@if (Model.Seeds.Count() == 0)
{
    <tr>
        <td></td>
        <td>No Seeds Found...</td>
        <td></td>
        <td></td>
    </tr>
}

@foreach (var seed in Model.Seeds)
{
    <tr onclick="loadPopup('popupBackground', 'seedInfoPopup', @seed.Id)">
        <td>@seed.PlantType</td>
        <td>@seed.Breed</td>
        <td>@seed.SunRequirement</td>
        <td>@seed.WaterRequirement</td>
    </tr>
}
