@page
@using PlantingCalendar.Models;
@model PlantingCalendar.Pages.SeedsModel
@{
    ViewData["Title"] = "Seeds";
}

<script src="~/js/seeds.js" asp-append-version="true"></script>

<div class="text-center">
    <div>
        Buttons
        <div>
            <input />
            <button></button>
        </div>
        <div>
            <button>New Seed</button>
        </div>
        <div />
        <div>
            <table id="plantTable">
                <tr>
                    <th>Plant Type</th>
                    <th>Breed</th>
                    <th>Sowing Dates</th>
                    <th>Harvesting Dates</th>
                    <th>Sun Requirement</th>
                    <th>Weekly Water Requirement</th>
                </tr>

                @foreach (var seed in Model.Seeds)
                {
                    <tr onclick="togglePopup('popupBackground', 'seedInfoPopup', @seed.Id)">
                        <td>@seed.PlantType</td>
                        <td>@seed.Breed</td>
                        <td>@seed.SowingDates</td>
                        <td>@seed.HarvestingDates</td>
                        <td>@seed.SunRequirement</td>
                        <td>@seed.WaterRequirement</td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

<div id="popupBackground" class="popupBackground">
    <div id="seedInfoPopup" class="popupBox">
        <div id="seedInfo">

        </div>
    </div>
</div>
